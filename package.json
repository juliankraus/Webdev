{
  "name": "webdev-hausarbeit",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "setup": "npm install",
    "clean": "rm -rf dist && rm -rf node_modules",
    "lint": "eslint -c .eslintrc.json public/javascripts/*",
    "static": "cp views/index.ejs dist/home.ejs && cp views/error.ejs dist/error.ejs",
    "css": "lessc public/stylesheets/style.less dist/style.css",
    "css:min": "lessc --clean-css public/stylesheets/style.less dist/style.css",
    "js": "browserify public/javascripts/* > dist/main.js",
    "js:min": "browserify public/javascripts/* > dist/tmp.js && babili dist/tmp.js > dist/main.js",
    "postjs:min": "rm -f dist/tmp.js",
    "predebug": "npm run lint",
    "debug": "npm run setup && mkdir dist && npm run css && npm run js && npm run static",
    "prebuild": "npm run lint",
    "build": "npm run setup && mkdir dist &&  npm run css:min && npm run js:min && npm run static",
    "test": "mkdir dist && npm run css && npm run js && npm run static",
    "remove": "rm -rf dist"
  },
  "dependencies": {
    "babili": "0.0.12",
    "browserify": "^14.3.0",
    "ejs": "~2.5.6",
    "eslint": "^3.19.0",
    "express": "~4.15.2",
    "google-maps": "^3.2.1"
  },
  "devDependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "less": "^2.7.2",
    "less-middleware": "~2.2.0",
    "less-plugin-clean-css": "^1.5.1",
    "morgan": "~1.8.1",
    "serve-favicon": "~2.4.2"
  }
}
