{
  "name": "webdev-hausarbeit",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",

    "setup": "npm install",

    "clean": "rm -rf dist && rm -rf node_modules",

    "lint": "eslint -c .eslintrc.json routes/** public/javascripts/**",

    "ejs": "cp views/index.ejs dist/home.ejs && cp views/error.ejs dist/error.ejs",

    "css": "lessc public/stylesheets/style.less dist/style.css",
    "css:min": "lessc --clean-css public/stylesheets/style.less dist/style.min.css",

    "js": "browserify public/javascripts/Main.js > dist/main.js",
    "js:min": "npm run js && babili dist/main.js > dist/main.min.js",
    "postjs:min": "rm -f dist/main.js",

    "predebug": "npm run lint",
    "debug": "npm run setup && npm run css && run npm js",

    "prebuild": "npm run lint",
    "build": "npm run setup && mkdir dist &&  npm run css:min && npm run js:min && npm run ejs"
  },
  "dependencies": {
    "babili": "0.0.12",
    "body-parser": "~1.17.1",
    "browserify": "^14.3.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "ejs": "~2.5.6",
    "eslint": "^3.19.0",
    "express": "~4.15.2",
    "geohash": "0.0.1",
    "less": "^2.7.2",
    "less-middleware": "~2.2.0",
    "less-plugin-clean-css": "^1.5.1",
    "morgan": "~1.8.1",
    "serve-favicon": "~2.4.2"
  }
}
